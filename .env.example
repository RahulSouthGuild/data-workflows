# Database Configuration (StarRocks)
DB_HOST=localhost
DB_PORT=9030
DB_NAME=datawiz
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=your_container_name
AZURE_BLOB_ACCOUNT_NAME=your_account_name
AZURE_BLOB_ACCOUNT_KEY=your_account_key

# MongoDB Configuration (for business constants)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=pidilite
MONGODB_COLLECTION=business_constants

# Email Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@pidilite.com
EMAIL_RECIPIENTS=admin@pidilite.com,team@pidilite.com

# Observability (SignOz/OpenTelemetry)
SIGNOZ_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=pidilite-datawiz
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
ENABLE_TRACING=true
ENABLE_METRICS=true

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
MAINTENANCE_MODE=false

# Scheduler Configuration
SCHEDULER_TIMEZONE=Asia/Kolkata
ENABLE_SCHEDULER=true

# Data Paths
DATA_HISTORICAL_PATH=/home/rahul/RahulSouthGuild/pidilite_datawiz/data/data_historical
DATA_INCREMENTAL_PATH=/home/rahul/RahulSouthGuild/pidilite_datawiz/data/data_incremental
TEMP_PATH=/home/rahul/RahulSouthGuild/pidilite_datawiz/data/temp

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/home/rahul/RahulSouthGuild/pidilite_datawiz/backups
